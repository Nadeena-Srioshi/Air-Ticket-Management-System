<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hanz Airline - Book Your Flight</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/footer.css" />
    <style>
      :root {
        --theme-gradient: linear-gradient(45deg, #e67818, #800080);
        --theme-color: #e67818;
      }

      .header {
        background: var(--theme-gradient);
        color: white;
        padding: 20px 0;
      }

      .header h1 {
        font-size: 1.75rem;
        margin: 0;
      }

      .btn-primary {
        background: var(--theme-gradient);
        border: none;
      }

      .btn-primary:hover {
        background: #800080;
      }

      .text-primary {
        color: var(--theme-color) !important;
      }

      .form-select:focus,
      .form-control:focus {
        border-color: var(--theme-color);
        box-shadow: 0 0 0 0.25rem rgba(255, 105, 180, 0.25);
      }

      .form-check-input:checked {
        background-color: var(--theme-color);
        border-color: var(--theme-color);
      }

      .form-check-label {
        margin-left: 5px;
      }
    </style>
  </head>

  <body>
    <!-- Header -->
    <header class="header text-center">
      <div class="container">
        <h1>Welcome to Hanz Airline</h1>
        <p>Fly seamlessly to your destination.</p>
      </div>
    </header>

    <!-- Main Content -->
    <main class="py-4">
      <div class="container">
        <!-- Search Form -->
        <div class="card p-4 shadow-sm mb-4">
          <h2 class="h5 text-primary">Book Your Flight</h2>
          <form id="flight-form" class="row g-3">
            <div class="col-md-12">
              <label class="form-label">Trip Type</label>
              <div>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="tripType"
                    id="oneWay"
                    value="One Way"
                    checked
                  />
                  <label class="form-check-label" for="oneWay">One Way</label>
                </div>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="tripType"
                    id="roundTrip"
                    value="Round Trip"
                  />
                  <label class="form-check-label" for="roundTrip"
                    >Round Trip</label
                  >
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <label for="from" class="form-label">From</label>
              <select class="form-select" id="from" required>
                <option selected disabled>Choose Departure</option>
                <option value="JFK">JFK</option>
                <option value="SVO">SVO</option>
                <option value="LHR">LHR</option>
                <option value="DEL">DEL</option>
              </select>
            </div>
            <div class="col-md-3">
              <label for="to" class="form-label">To</label>
              <select class="form-select" id="to" required>
                <option selected disabled>Choose Destination</option>
                <option value="JFK">JFK</option>
                <option value="SVO">SVO</option>
                <option value="LHR">LHR</option>
                <option value="DEL">DEL</option>
              </select>
            </div>
            <div class="col-md-2">
              <label for="departure-date" class="form-label"
                >Departure Date</label
              >
              <input
                type="date"
                class="form-control"
                id="departure-date"
                required
              />
            </div>
            <div
              class="col-md-2"
              id="return-date-container"
              style="display: none"
            >
              <label for="return-date" class="form-label">Return Date</label>
              <input type="date" class="form-control" id="return-date" />
            </div>
            <div class="col-md-2 align-self-end">
              <button
                type="button"
                id="search-btn"
                class="btn btn-primary w-100"
              >
                Search Flights
              </button>
            </div>
          </form>
        </div>

        <!-- Flight Results -->
        <h2 class="h5 text-primary mb-3">Available Flights</h2>
        <div id="flight-results" class="row row-cols-1 row-cols-md-3 g-4"></div>
      </div>
    </main>

    <!-- <footer class="bg-light text-center py-3" id="footer"></footer> -->
    <%- include("./partials/footer") %>

    <script>
      const tripTypeRadios = document.querySelectorAll(
        'input[name="tripType"]'
      );
      const returnDateContainer = document.getElementById(
        "return-date-container"
      );
      const returnDateInput = document.getElementById("return-date");

      tripTypeRadios.forEach((radio) => {
        radio.addEventListener("change", () => {
          if (radio.value === "Round Trip") {
            returnDateContainer.style.display = "block";
            returnDateInput.setAttribute("required", "true");
          } else {
            returnDateContainer.style.display = "none";
            returnDateInput.removeAttribute("required");
          }
        });
      });
    </script>
    <!-- <script src="script.js"></script> -->
  </body>
</html>
