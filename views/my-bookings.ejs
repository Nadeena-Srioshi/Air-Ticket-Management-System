<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="icon" href="/assets/home/logo.png" />
    <link rel="stylesheet" href="/footer.css" />
    <title>Hanz Airline</title>
    <style>
      :root {
        --theme-gradient: linear-gradient(45deg, #e67818, #800080);
        --theme-color: #ff69b4;
      }

      nav {
        background: var(--theme-gradient);
        color: black;
        padding: 20px 0;
      }

      body {
        height: 100vh;
      }

      .custom-container {
        margin-top: 60px;
        min-height: 50vh;
        display: flex;
        align-items: center;
        justify-content: center;
        color: black;
        background: white;
      }

      ul {
        list-style-type: none;
      }
    </style>
  </head>
  <!-- data-bs-theme="dark" bg-body-tertiary -->

  <body>
    <%- include("./partials/nav") %>

    <div class="custom-container">
        <div class="container text-center">
          <h2 class="text-center mb-4">Your Bookings</h2>
          <% if (bookings.length > 0) { %>
            <% bookings.forEach(booking => { %>
              <div class="booking-card">
                <div class="booking-header">
                  Booking ID: <%= booking.bookingId %> 
                  <span class="badge <%= booking.status === 'Confirmed' ? 'bg-success' : 'bg-warning' %>">
                    <%= booking.status %>
                  </span>
                </div>
                <div class="booking-info">
                  <div><strong>Flight:</strong> <%= booking.flight ? booking.flight.flightNumber : 'N/A' %></div>
                  <div><strong>Booking Date:</strong> <%= new Date(booking.bookingDate).toLocaleDateString() %></div>
                  <div><strong>Payment Status:</strong> <%= booking.paymentStatus %></div>
                  <div><strong>Passengers:</strong>
                    <ul>
                      <% booking.passengers.forEach(passenger => { %>
                        <li>
                          <strong>Name:</strong> <%= passenger.name %> <br>
                          <strong>Email:</strong> <%= passenger.email %> <br>
                          <strong>Class:</strong> <%= passenger.classType %> <br>
                          <strong>Seat Number:</strong> <%= passenger.seatNumber %>
                        </li>
                      <% }) %>
                    </ul>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <p class="text-center">You have no bookings yet.</p>
          <% } %>
        </div>
      </div>

    <%- include("./partials/footer") %>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
